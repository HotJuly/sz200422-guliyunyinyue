.indexContainer .bannerSwiper .swiperItem .swiperImg{
  width:100%;
  height:100%;
}

.indexContainer .nav{
  display:flex;
}

.indexContainer .nav .navItem{
  display:flex;
  flex-direction: column;
  align-items: center;
  flex-grow:1;
}

.indexContainer .nav .navItem .iconfont{
  font-size:50rpx;
  color:white;
  background-color: rgb(240, 19, 19);
  width:100rpx;
  height:100rpx;
  border-radius: 50%;
  line-height:100rpx;
  text-align: center;
  margin:20rpx 0;
}

.indexContainer .nav .navItem text{
  font-size:28rpx;
}

.recommendContainer{
  padding:0 20rpx;
}

.recommendContainer .recommendScroll{
  display:flex;
  padding-top:20rpx;
}

.recommendContainer .recommendScroll .recommendItem{
  width:200rpx;
  margin-right:20rpx;
}

.recommendContainer .recommendScroll .recommendItem image{
  width:200rpx;
  height:200rpx;
  border-radius: 10rpx;
}

.recommendContainer .recommendScroll .recommendItem text{
  width:100%;
  /* height:48rpx; */
  /* display:block;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis; */
  /* 开启webkit内核盒模型 */
  display:-webkit-box;
  /* 设置几行之后文本溢出 */
  -webkit-line-clamp:2;
  /* 告知文本排列方向 */
  -webkit-box-orient:vertical;
  overflow:hidden;
}


.topContainer{
  padding:0 20rpx;
}

.topContainer .topSwiper{
  height:470rpx;
}

.topContainer .topSwiper .topItem{
background: #fbfbfb;
width:96%;
border-radius:10rpx;
}

.topContainer .topSwiper .topItem .topTitle{
  font-size:26rpx;
  padding-bottom: 20rpx;
}

.topContainer .topSwiper .topItem .topContent{
  display:flex;
  align-items: center;
  height:100rpx;
  margin:20rpx 0;
}

.topContainer .topSwiper .topItem .topContent .topImg{
  width:100rpx;
  height:100rpx;
  border-radius: 10rpx;
  flex-shrink: 0;
}

.topContainer .topSwiper .topItem .topContent .topNum{
  width:100rpx;
  height:100rpx;
  text-align: center;
  line-height: 100rpx;
  flex-shrink: 0;
}

.topContainer .topSwiper .topItem .topContent .topName{
  overflow:hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
